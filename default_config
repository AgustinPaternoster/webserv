server {

    listen  8080;
    error_page 404 /errors/404.html;
    error_page 405 /errors/405.html;
    root www/html;
    client_max_body_size 10M;
    index index.html;

    location /images/ {
        root www/;
        upload_store ./www/upload;
        allow_methods GET POST DELETE ;
        autoindex off;
    }

    location /upload/ {
        root ./www/upload;
        allow_methods GET POST DELETE;
        upload_store ./www/upload;
        autoindex on;}        
}

server {

    listen  8090;
    root ./www/html;
    client_max_body_size 10M;
    error_page 404 /errors/404.html;
    index index2.html;

    location /images/ {
        root ./www/default;
        allow_methods GET;
        autoindex off;
    }

    location /upload/ {
        root ./www/uploads;
        allow_methods GET POST;
        upload_store ./www/uploads;
        autoindex on;
    }

}

server {

    listen  8070;
    root ./www/html;
    client_max_body_size 10M;
    error_page 404 /errors/404.html;
    index index3.html;

    location / {
        root ./www/html;
        allow_methods GET;
        autoindex off;
    }

    location /images/ {
        root ./www/default;
        allow_methods GET;
        autoindex off;
    }

    location /upload/ {
        root ./www/uploads;
        allow_methods GET POST;
        upload_store ./www/uploads;
        autoindex on;
    }

}